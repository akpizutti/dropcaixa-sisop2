{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Program",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/Etapa2/Server/server",
        "args": ["5002", "backup", "127.0.0.1", "4000"],//["akim", "localhost", "4000"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/Etapa2",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        //"preLaunchTask": "",  // Tarefa de build que ser√° executada antes do debug
        "miDebuggerPath": "/usr/bin/gdb",
        "logging": {
          "trace": true,
          "engineLogging": true,
          "programOutput": true,
          "exceptions": true
        }
      }
    ]
  }